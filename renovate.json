{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base", "gitmoji"
  ],
  "lockFileMaintenance": { "enabled": true },
	"packageRules": [
    {
			"matchUpdateTypes": ["minor", "patch", "pin", "digest", "lockFileMaintenance"],
			"automerge": true
		}
  ]
}
