{
	"name": "@naokiy/node-red-ip",
	"version": "0.0.0",
	"description": "Provide IP address for NodeRED",
	"type": "commonjs",
	"main": "none",
	"author": "naokiy",
	"license": "MIT",
	"files": [
		"dist"
	],
	"keywords": [
		"node-red"
	],
	"publishConfig": {
		"access": "restricted",
		"registry": "https://npm.pkg.github.com/naokiy"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/naokiy/node-red-ip.git"
	},
	"scripts": {
		"test": "jest",
		"build": "npm run clean && npm run build-ts && npm run copy-static-assets",
		"clean": "rimraf dist",
		"build-ts": "tsc -p tsconfig.prod.json",
		"copy-static-assets": "copyfiles -f ./public/**/*.html dist"
	},
	"node-red": {
		"nodes": {
			"ip": "dist/ip.js"
		}
	},
	"devDependencies": {
		"@types/ip": "1.1.0",
		"@types/jest": "29.5.2",
		"@types/node-red": "1.3.1",
		"@types/node-red-node-test-helper": "0.2.3",
		"@typescript-eslint/eslint-plugin": "5.60.0",
		"@typescript-eslint/parser": "5.60.0",
		"copyfiles": "2.4.1",
		"esbuild": "0.18.5",
		"esbuild-jest": "0.5.0",
		"eslint": "8.43.0",
		"eslint-config-prettier": "8.8.0",
		"eslint-import-resolver-typescript": "3.5.5",
		"eslint-plugin-import": "npm:eslint-plugin-i@2.27.5-2",
		"jest": "29.5.0",
		"node-red": "3.0.2",
		"node-red-node-test-helper": "0.3.1",
		"prettier": "2.8.8",
		"rimraf": "5.0.1",
		"typescript": "5.1.3"
	},
	"dependencies": {
		"ip": "1.1.8"
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "esbuild-jest"
		}
	}
}
